{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["pip-compile"],
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "extends": [
    "config:base"
  ],
  "constraints": {
    "python": "==3.9"
  },
  "schedule:daily",
    {
      "groupName": "all dependencies",
      "separateMajorMinor": true,
      "groupSlug": "all",
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all dependencies",
          "groupSlug": "all"
        }
      ],
      "lockFileMaintenance": {
        "enabled": true
      }
    }
}
